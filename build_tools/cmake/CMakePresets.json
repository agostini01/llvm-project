        "LLVM_DIR": "${sourceDir}/builds/llvm-project/install/lib/cmake/llvm",
        "MLIR_ENABLE_BINDINGS_PYTHON": "ON"
      }
    },
    {
      "name": "config-llvm-dev",
      "inherits": "default",
      "description": "Configure for building llvm-dev project",
      "binaryDir": "${sourceDir}/builds/llvm-project/build",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/builds/llvm-project/install",
        "LLVM_INSTALL_UTILS": "ON",
        "LLVM_ENABLE_LLD": "ON",
        "LLVM_ENABLE_PROJECTS": "mlir",
        "LLVM_TARGETS_TO_BUILD": "host",
        "LLVM_INCLUDE_TOOLS": "ON",
        "LLVM_BUILD_TOOLS": "ON",
        "LLVM_INCLUDE_TESTS": "ON",
        "MLIR_INCLUDE_TESTS": "ON",
        "MLIR_ENABLE_BINDINGS_PYTHON": "ON",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "LLVM_ENABLE_ASSERTIONS": "ON",
        "LLVM_BUILD_EXAMPLES": "OFF"
