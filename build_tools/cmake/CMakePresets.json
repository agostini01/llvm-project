      "configurePreset": "config-cc-dev",
      "description": "Build cc-dev project",
      "targets": [
        "standalone-opt"
      ]
    },
    {
      "name": "build-llvm-dev",
      "configurePreset": "config-llvm-dev",
      "description": "Build llvm-dev project",
      "targets": [
        "opt",
        "mlir-opt",
        "mlir-translate",
        "mlir-cpu-runner",
        "install"
      ]
